<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="@drawable/gradient_color"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.signup.SignupActivity"
    >
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="40dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/login_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="25dp"
            android:textSize="30sp"
            android:text="@string/register_title_form"
            android:textColor="@color/textColorInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:id = "@+id/edit_text_name"
            android:focusable = "true"
            android:layout_marginTop = "0dp"
            android:textColor="@color/black"
            android:textColorHint="@color/textColorInput"
            android:hint="@string/name_hint"
            android:inputType="text"
            android:importantForAutofill="no" />

        <EditText
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:id = "@+id/edit_text_email"
            android:focusable = "true"
            android:layout_marginTop = "0dp"
            android:textColor="@color/black"
            android:textColorHint="@color/textColorInput"
            android:hint="@string/email_hint"
            android:inputType="textEmailAddress"
            android:importantForAutofill="no" />

        <EditText
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:id = "@+id/edit_text_number"
            android:focusable = "true"
            android:layout_marginTop = "0dp"
            android:textColor="@color/black"
            android:textColorHint="@color/textColorInput"
            android:hint="@string/phone_hint"
            android:inputType="phone"
            android:importantForAutofill="no" />

        <EditText
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:id = "@+id/edit_text_pass"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/textColorInput"
            android:hint = "@string/password_hint_signup"
            android:focusable = "true"
            android:importantForAutofill="no" />

        <EditText
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:id = "@+id/edit_text_confirm_pass"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/textColorInput"
            android:hint = "@string/password_hint_confirm"
            android:focusable = "true"
            android:importantForAutofill="no" />

        <androidx.appcompat.widget.AppCompatButton
            android:gravity="center"
            android:layout_gravity="center"
            style="@style/ButtonLoginTheme"
            android:padding="0dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="40dp"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/register_title_form"
            android:id="@+id/btn_signup"
            />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:textColor="@color/textColorInput"
                android:textAlignment="textEnd"
                android:layout_marginEnd="15dp"
                android:maxWidth="150dp"
                android:text="@string/login_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:background="@android:color/transparent"
                android:layout_marginTop="0dp"
                android:minWidth="150dp"
                android:textColor="@color/textColorInput"
                android:textAllCaps="false"
                android:elevation="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_login_suggestion"
                android:id="@+id/btn_cancel"
                />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/loader_signup"
            style="?android:attr/progressBarStyle"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            />

    </LinearLayout>
</LinearLayout>